<%= simple_form_for (@room) do |f| %>
  <%= f.input :name, label: 'name:' %>
  <%= f.input :size, label: 'size:' %>
  <%= f.input :price, label: 'price:' %>
  <%= f.input :picture, label: 'picture:' %>
  <%= f.collection_check_boxes(:service_ids, Service.all, :id, :name) %>


  <%= f.submit "edit room!", class: "btn btn-primary btn-lg confirm" %>
<% end %>
